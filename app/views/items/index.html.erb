<%= link_to 'new item', new_item_path%>
<table>
 <thead>
  <tr>
    <th>ID</th>
    <th>title</th>
    <th>expected cost</th>
    <th>is done</th>
    <th>action</th>
  </tr>
 </thead>
 <tbody>
    <% @items.each do |item| %>
        <tr>
         <td><%=item.id%></td>
         <td><%=link_to item.title, item_path(item)%></td>
         <td><%=item.expected_cost%></td>
         <td><%=item.is_done%></td> 
         <td><%=link_to 'edit', edit_item_path(item.id)%></td> 
         <td><%=button_to 'delete', item, method: :delete%></td> 
        </tr>
    <% end %>
    
 </tbody>
</table>
