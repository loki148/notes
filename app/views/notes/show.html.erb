<div class='flex justify-between'>
 <%=link_to 'Back to notes', notes_path, class:'bg-indigo-600 hover:bg-indigo-800 text-white rounded-lg px-4 py-2'%>
 <%=link_to'edit', edit_note_path(@note.id), class:'bg-indigo-600 hover:bg-indigo-800 text-white rounded-lg px-4 py-2'%>
</div>
<br/>
<div>
    <h1 class='text-2xl font-semibold'><%=@note.name%></h1>
    <p class='mt-4'><%=@note.body%></p>
</div>

<div class='flex justify-end mt-8'>
        <%=button_to 'Delete', @note, method: :delete, class: 'ml-1 px-3 py-1.5 bg-pink-100 hover:bg-pink-300 opacity-60  hover:shadow-xl text-rose-600 rounded-lg shadow-lg'%>
      </div>