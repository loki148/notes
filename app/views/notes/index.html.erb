<div class="flex justify-between items-center">
  <h1 class="text-2xl font-semibold">Notes</h1>
  <%=link_to 'New note', new_note_path, class:'px-4 py-2 bg-indigo-600 hover:bg-indigo-800 text-white rounded-lg shadow-lg'%>
</div>
<h2 class="text-sm text-stone-300 opacity-60"><%=link_to "<- Home", root_path %></h2> 






<section class='mt-6 grid grid-cols-1 sm:grid-cols-2 gap-x-6 gap-y-6'>
 <% @notes.each do |note| %>
   
    <div class=' shadow-md p-4 border border-indigo-400 transition duration-300 hover:shadow-lg rounded-2xl'>
      <div class='w-full flex justify-center'>
       <h2 class='text-lg font-medium'><%=link_to note.name, note_path(note)%></h2>
      </div>
      <div class='p-4 flex justify-center'>
       <p><%=note.body%></p>
      </div>
      <div class='flex justify-center items-center'>
        <%=link_to 'Edit', edit_note_path(note.id), class: 'px-3 py-1.5 border hover:bg-indigo-400 text-indigo-500 border-indigo-500 rounded-lg shadow-lg '%>
        <%=button_to 'Delete', note, method: :delete, class: 'ml-1 px-3 py-1.5 bg-pink-100 hover:bg-pink-300 opacity-60  hover:shadow-xl text-rose-600 rounded-lg shadow-lg'%>
      </div>
    </div>
 <% end %>
</section>
